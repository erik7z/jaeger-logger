{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "jsRules": {},
  "rules": {
    "curly": [false, "ignore-same-line"],
    "no-console": false,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["*queries.ts"]
  }
}
